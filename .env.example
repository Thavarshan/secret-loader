# Third-party service API keys fetched from AWS SSM
THIRD_PARTY_API_KEY="ssm:/third-party/api/key"
THIRD_PARTY_API_SECRET="ssm:/third-party/api/secret"

# AWS credentials fetched from CloudFormation stack outputs
AWS_ACCESS_KEY_ID="cf:my-stack:AccessKeyId"
AWS_SECRET_ACCESS_KEY="cf:my-stack:SecretAccessKey"

# Email service configuration from AWS SSM
MAIL_USERNAME="ssm:/email/service/username"
MAIL_PASSWORD="ssm:/email/service/password"
MAIL_HOST="smtp.mailtrap.io"
MAIL_PORT=2525
MAIL_ENCRYPTION=tls

# Local development fallback values for S3 (default for development)
AWS_BUCKET=my-dev-bucket
AWS_REGION=us-east-2
